.faq-block
  flex none
  padding 34px 0 88px
  background $color1

  @media (min-width: $desc)
    padding 110px 0 170px

  &__title
    color #fff
    margin-bottom 44px

  &__item
    border-bottom 1px solid #414455
    margin-bottom 34px
    padding-bottom 34px
    position relative

    &.opened
      & ^[0]
        &__item
          &-icon
            transform rotate(45deg)

          &-body
            display block

    @media (min-width: $desc)
      padding-right 60px

      &.opened
        display flex

        & ^[0]
          &__item
            &-title
              flex 0 0 48%
              margin-right 4%

            &-body
              flex 0 0 48%

    &:last-child
      margin-bottom 0

    &-icon
      position absolute
      right 0
      top 0
      width 40px
      height 40px
      transition transform 0.3s ease
      cursor pointer

      &:before
        content ""
        position absolute
        left 50%
        top 0
        bottom 0
        width 2px
        background #DF125C
        margin-left -1px
      &:after
        content ""
        position absolute
        top 50%
        left 0
        right 0
        height 2px
        background #DF125C
        margin-top -1px

    &-title
      color #fff
      font-size 18px
      font-weight 600
      padding-right 64px
      cursor pointer

      @media (min-width: $tablet)
        font-size 26px

      @media (min-width: $desc)
        padding-right 0

    &-body
      padding-top 34px
      font-size 14px
      color #FFFFFF
      display none

      @media (min-width: $desc)
        padding-top 0

      ul
        padding 0
        margin 0
        list-style none

        li
          position relative
          padding-left 28px
          margin-bottom 14px

          &:before
            content ""
            position absolute
            left 0
            top 10px
            width 10px
            height 1px
            background #9681F2
