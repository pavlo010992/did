.remodal-is-locked
  .desctop-navigation__navigation
    margin-right 8.5px
.desctop-navigation
  display none

  @media (min-width: 1360px)
    display block
    position fixed
    left 0
    right 50%
    top 0
    bottom 0
    margin-right 530px
    z-index 2
    padding 200px 0 20px 20px
    max-height 100%
    overflow auto
    mix-blend-mode difference

  &__navigation
    max-width 240px
    margin-left auto

    ul
      padding 0
      margin 0
      list-style none

      li
        margin 0 0 23px
        a
          font-size 14px
          color #fff
          text-decoration none

          &:hover
            text-decoration underline
