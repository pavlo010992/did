.remodal-overlay
    background-color rgba(31, 16, 95, 0.7)

.remodal-close
    &:before
        font-size 60px
        color #000
        font-family inherit !important
        font-weight 300
        top 0
        right 5px

        @media (min-width: $tablet)
            top 30px
            right 30px


.popup-success
    padding-top 40px
    padding-bottom 30px
    display none

    &__desc
        font-size 28px
        color #122A13
        font-weight bold
        line-height 1.2
        text-align center
