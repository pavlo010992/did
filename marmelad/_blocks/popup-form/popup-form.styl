.popup-form
    max-width 530px
    border-radius 20px
    padding 40px 25px 25px
    text-align left

    @media (min-width: $tablet)
        padding 40px 50px 50px

    &__section
    
        &.success
            display none    

    &__title
        font-size 30px
        color #12152A
        font-weight bold
        line-height 1.1
        margin-bottom 30px
        width 300px
        max-width 100%

    &__group
        margin-bottom 20px

        @media (min-width: $tablet)
            display flex
            align-items center    

    &__name
        margin-bottom 15px

        @media (min-width: $tablet)
            width 100px
            margin-right 25px
            margin-bottom 0

    &__input
        flex 1 1 auto        

        input
            &.is-error
                border 2px solid #DF125C

    &__btn-send
        width 100%
        display block

    &__user-agreement
        font-size 12px
        color #12152A
        line-height 1.1
        margin-bottom 25px

    &__label
        display flex     

        span
            display block
            padding-left 40px
            padding-right 35px
            position relative
            &:before
                content ''
                position absolute
                top 0
                left 0
                width 18px
                height 18px
                background-color #ECE8FD
                border-radius 3px
                transition background-color .3s

            &:after
                content ''
                position absolute
                top 5px
                left 5px
                width 8px
                height 8px
                background-color #9681F2
                border-radius 3px
                opacity 0
                transition opacity .3s

        input[type="checkbox"]
            display none
            
        input[type=checkbox]:checked + span

            &:after
                opacity 1    

        a
            font-size 12px
            color #12152A
            line-height 1.1

    &__warning
        align-items center
        margin-top 25px
        margin-bottom 25px
        display none

