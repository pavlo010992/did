.tickets-block
  background $color1
  padding-top 75px
  margin-top -25px
  padding-bottom 5px

  @media (min-width: $desc)
    padding-top 100px
    margin-top 0
    padding-bottom 25px

  &__title
    text-align center
    color #fff
    margin-bottom 44px

    @media (min-width: $desc)
      margin-bottom 70px

  &__list
    display flex
    flex-wrap wrap
    justify-content center

  &__item
    flex 0 0 100%
    margin-bottom 30px

    .tickets-thumbs
      max-width 340px
      margin 0 auto

    @media (min-width: $tablet)
      flex 0 0 49%
      margin-right 2%

      &:nth-child(2n)
        margin-right 0

    @media (min-width: $desc)
      flex 0 0 32%
      margin-right 2%

      &:nth-child(2n)
        margin-right 2%

      &:nth-child(3n)
        margin-right 0

.tickets-thumbs
  border-radius 80px 0 80px 80px
  border 1px solid #343A69
  border-right-width 10px
  border-bottom-width 10px

  &__top
    padding 36px 20px 48px
    text-align center
    line-height 1.3

  &__term
    font-size 36px
    color #fff
    font-weight bold
    margin-bottom 7px

  &__date
    color #E5E5E5
    font-size 14px
    opacity 0.5
    margin-bottom 35px

  &__price
    font-size 42px
    color #fff
    text-transform uppercase
    font-weight bold

  &__timer
    background url(../img/bddashed.svg) 50% 0 repeat-x
    padding 37px 20px 66px
    text-align center

    &-title
      color #FFFFFF
      font-size 14px
      font-weight 300
      line-height 1
      margin-bottom 27px


    &.disabled
      & ^[0]
        &__timer
          &-title
            display none
          &-body
            background none
            box-shadow none
            color #fff
            font-size 18px
            font-weight 400
            line-height 1

    &-body
      > span
        display inline-block
        vertical-align top
        margin-right 30px

        &:last-child
          margin-right 0

        &.hourts,
        &.day
          position relative
          &:before
            content ":"
            position absolute
            top 8px
            right -22px
            color #fff
            font-size 36px
            line-height 1
            font-weight bold

      .time-body
        position relative
        color #fff
        font-size 36px
        font-weight bold
        display block


      .time-name
        text-align center
        display block
        color #E5E5E5
        font-size 14px
        font-weight 400
        line-height 1
        opacity 0.5
