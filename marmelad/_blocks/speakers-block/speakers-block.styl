.speakers-block
    background-color #12152A

    &__section
        background-color #fff
        border-radius 0px 0 25px 25px
        padding-bottom 70px

    &__title
        font-size 30px
        font-weight bold
        text-align center
        margin-bottom 45px  

    &__items
        display flex
        justify-content center
        flex-wrap wrap

    &__item
        display flex
        flex-direction column
        justify-content center    

    &__body
        width 240px

    &__pic
        position relative
        padding-bottom 30px
        padding-right 25px
        padding-left 25px

        &:after
            content ''
            position absolute
            bottom 0
            left 0
            width 240px
            height 180px
            background-image url('../img/back-plate-light-pic.svg')
            background-repeat no-repeat
            background-size contain
            background-position 0 0    
            z-index 1
     
    &__bio
        position absolute
        top 35px
        right 0
        z-index 2      

    &__bio-icon
        width 42px
        height 42px
        background-image url('../img/more-text-icon.svg')
        display block

    &__bio-text
        font-size 14px
        line-height 1.3
        background-image url('../img/bio-back-plate.svg')
        background-repeat no-repeat
        background-size cover
        background-position 0 0
        width 395px
        height 220px
        padding 50px 55px 30px 120px
        position absolute
        top -50px
        left -50px
        z-index -1

    &__img
        width 190px
        height 190px
        margin-right auto
        margin-left auto
        position relative
        z-index 2

        img
            max-width 100%
            height auto
            vertical-align top     

    &__content
        padding-right 25px
        padding-left 25px   
        margin-top 30px        

    &__name
        font-size 30px
        color #000
        font-weight 600
        line-height 1.2
        margin-bottom 15px
    
    &__text
        font-size 14px
        line-height 1.1
        width 205px

    &__bottom
        margin-top 60px    

    &__btn-show-more
        width 250px    
        margin-right auto
        margin-left auto
        display block