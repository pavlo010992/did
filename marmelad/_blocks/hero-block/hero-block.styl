.hero-block
  flex none
  background $color1
  border-bottom 1px solid rgba(255,255,255, .1)
  position relative
  overflow hidden

  @media (min-width: $desc)
    &:before
      content ""
      position absolute
      left 50%
      right -9999px
      bottom 0
      margin-left 377px
      height 484px
      background url(../img/hero-bg.svg) 0 100% no-repeat

  &__inner
    padding-top 40px
    padding-bottom 77px
    position relative
    @media (min-width: $desc)
      padding-top 120px
      padding-bottom 160px

  &__head
    margin-bottom 25px
    @media (min-width: $tablet)
      margin-bottom 90px
      display flex
    @media (min-width: $desc)
      margin-bottom 130px

  &__image
    max-width 246px
    margin-bottom 30px

    @media (min-width: $tablet)
      max-width 682px
      flex 0 1 auto
      margin-right 80px
    @media (min-width: $desc)
      margin-right 97px

  &__description
    font-size 14px
    color #fff
    @media (min-width: $tablet)
      flex 0 0 230px
      font-size 21px

  &__body
    @media (min-width: $tablet)
      display flex
      align-items center
      max-width 840px

  &__information
    display flex
    flex-wrap wrap
    margin-bottom 68px
    @media (min-width: $tablet)
      flex 1 0 auto
      margin 0

    &-item
      flex 0 0 49%
      margin-right 2%
      font-size 18px
      font-weight 600
      letter-spacing 0.08em
      color #fff

      > span
        display block
        color #E5E5E5
        opacity 0.5
        font-size 14px
        font-weight normal
        line-height 1.3
        margin-bottom 8px

      &:nth-child(2n)
        margin-right 0

      &:nth-child(1n + 3)
        margin-top 20px

      @media (min-width: $desc)
        font-size 22px

        > span
          font-size 14px

  &__button
    .site-btn
      min-width 186px
      font-weight 500

    @media (min-width: $tablet)
      order -1
      margin-right 50px

    @media (min-width: $desc)
      margin-right 110px
      .site-btn
        min-width 240px
        font-size 20px
        padding 25px 20px
        border-radius 0px 35px 35px 35px
