.sign-up-block

    &__section
        background-color #12152A

    &__inner
        padding-top 50px
        padding-bottom 70px
        background-color #fff
        border-radius 0px 25px 25px 25px
        position relative
        overflow hidden

        @media (min-width: $desc)
            padding-top 105px
            padding-bottom 115px

        @media (min-width: $tablet)
            border-radius none

        &:before
            content ''
            position absolute
            bottom 0
            right 0
            background-image url('../img/pattern-su.svg')    
            background-repeat no-repeat
            background-position 0 0
            width 100%
            height 275px
            transform scale(-1, 1)
            background-size contain
            z-index 1

        &:after
            content ''
            position absolute
            bottom 25px
            left 50px
            background-image url('../img/pattern-dots.svg')    
            background-repeat no-repeat
            background-position 0 0
            width 100%
            height 7px
            background-size contain
            z-index 1   

    &__content
        position relative
        z-index 5

    &__title
        font-size 30px
        font-weight bold
        line-height 1.4
        margin-bottom 40px
        width 240px
        max-width 100%

        @media (min-width: $tablet)
            width 550px