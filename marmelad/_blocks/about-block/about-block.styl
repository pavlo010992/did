.about-block
  flex none
  background #fff
  border-radius 0 25px 0 0
  margin-top -25px
  margin-bottom 75px
  overflow hidden

  @media (min-width: $desc)
    margin-top 0
    margin-bottom 110px

  &__inner
    padding-top 68px
    @media (min-width: $desc)
      padding-top 84px
      padding-right 280px
      position relative

      a
        font-weight 500

      &:before
        content ""
        position absolute
        left 100%
        right -9999px
        top 0
        bottom 0
        margin-left -180px
        background url(../img/about-bg.svg) 0 0 no-repeat

  &__description
    font-weight 600
    color #000
    font-size 18px
    margin-bottom 36px
    line-height 1.3

    @media (min-width: $desc)
      margin-bottom 40px
      font-size 24px
      font-weight 700

  &__image
    margin 0 -20px 36px

    @media (min-width: $tablet)
      margin 0 0 36px

    @media (min-width: $desc)
      margin-bottom 40px
