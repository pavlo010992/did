.about-block
  flex none
  background #fff
  border-radius 0 25px 25px 25px
  margin-top -25px
  padding-bottom 75px
  overflow hidden
  position relative
  z-index 1

  &__bg
    display none
    @media (min-width: $desc)
      display block
      position absolute
      right 0
      left 50%
      top 0
      bottom 0
      margin-left 250px

      &:before
        content ""
        position absolute
        right 0
        top 0
        bottom 0
        width 100%
        max-width 450px
        background url(../img/about-bg.svg) 0 0 no-repeat

  @media (min-width: $desc)
    margin-top 0
    padding-bottom 110px

  &__inner
    padding-top 68px
    @media (min-width: $desc)
      padding-top 84px
      padding-right 280px
      position relative

      a
        font-weight 500

  &__description
    font-weight 600
    color #000
    font-size 18px
    margin-bottom 36px
    line-height 1.3

    @media (min-width: $desc)
      margin-bottom 40px
      font-size 24px
      font-weight 700

  &__image
    margin 0 -20px 36px

    @media (min-width: $tablet)
      margin 0 0 36px

    @media (min-width: $desc)
      margin-bottom 40px
