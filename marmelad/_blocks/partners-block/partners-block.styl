.partners-block
    color #fff
    background-color #12152A
    padding-top 35px

    @media (min-width: $desc)
        padding-top 55px
        padding-bottom 100px

    &__head
        display flex
        flex-direction column
        // margin-bottom 40px

        @media (min-width: $desc)
            flex-direction row
            justify-content space-between
            align-items center
            // margin-bottom 75px

    &__title
        font-size 30px
        color #fff
        font-weight bold
        margin-bottom 40px
        text-align center

        @media (min-width: $desc)
            font-size 80px

    &__btn-sign-up
        width 225px
        margin-right auto
        margin-left auto

        @media (min-width: $desc)
            margin-right 0
            margin-left 25px

    &__row
        border-top 1px solid #414455
        margin-right -20px
        margin-left -20px
        text-align center
        padding-top 45px

        @media (min-width: $desc)
            padding-top 0
            border-top 0
            margin-right 0
            margin-left 0

    &__name
        font-size 18px
        line-height 1.3
        text-align center
        width 245px
        max-width 100%
        margin-right auto
        margin-left auto
        margin-bottom 45px

        @media (min-width: $desc)
            text-align left
            width 100%
            display flex
            margin 0

        &:after
            content ''
            border-bottom 1px solid #414455
            flex 1 1 auto
            margin-left 20px

    &__items
        display flex
        flex-wrap wrap
        justify-content center

        @media (min-width: $desc)
            padding-right 0
            padding-left 0
            padding-top 70px

        @media (min-width: $tablet)
            padding-right 20px
            padding-left 20px

    &__item
        flex 0 0 50%
        margin-bottom 50px
        text-align center

        @media (min-width: $tablet)
            flex 0 0 20%

        &:hover
            a
                filter none
                opacity 1

                img
                    filter none

        a
            display block
            filter sepia(100%) brightness(93%) hue-rotate(222deg) saturate(199%) contrast(109%)
            opacity 0.6
            transition filter .3s, opacity .3s

            img
                max-width 100%
                height auto
                vertical-align middle
                filter brightness(0.5)
                transition filter .3s
