.contacts-block

    &__section
        color #fff
        padding-top 80px
        padding-bottom 80px
        background-color #12152A

        @media (min-width: $tablet)
            padding-top 95px
            padding-bottom 75px

    &__title
        font-size 30px
        color #fff
        font-weight bold
        margin-bottom 40px

        @media (min-width: $desc)
            font-size 80px
            margin-bottom 70px

    &__content
        @media (min-width: $desc)
            display flex
            // justify-content space-between

    &__address,
    &__email,
    &__phone
        margin-bottom 40px

        @media (min-width: $desc)
            margin-right 30px

    &__address
        @media (min-width: $tablet)
            width 450px
            max-width 100%

    &__email

        & ^[0]

            &__info
                text-decoration underline

    &__name
        font-size 14px
        color #E5E5E5
        line-height 1.2
        opacity 0.5
        margin-bottom 10px

    &__info
        font-size 18px
        color #fff
        line-height 1.3
        font-weight 600
        letter-spacing 0.08em
        text-decoration none

        @media (min-width: $tablet)
            font-size 22px

    &__form-subscribe

        & ^[0]

            &__name
                margin-bottom 15px

    &__group
        @media (min-width: $tablet)
            display flex

    &__input
        margin-bottom 20px

        @media (min-width: $tablet)
            flex 1 1 auto
            margin-bottom 0
            margin-right 25px

        input
            text-align center
            background-color #fff

            @media (min-width: $tablet)
                text-align left

    &__btn-subscribe
        width 100%

        @media (min-width: $tablet)
            max-width 250px
