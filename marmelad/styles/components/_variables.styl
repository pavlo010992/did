$system-font = unquote('"IBM Plex Sans", "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"')

$colors = {
  theme: convert($data.colors.theme),
  accent: convert($data.colors.accent),
}

$fonts = {
  base: $system-font,
  headings: $system-font
}

$body = {
  fontFamily: $fonts.base,
  fontSize: 14px,
  fontWeight: 400,
  lineHeight: 1.5,
  color: #212529,
  bgc: #fff
}

$selection = {
  bgc: $colors.theme,
  color: #fff
}

$selectionHeadings = {
  bgc: $colors.accent,
  color: #000
}

$placeholders = {
  normal : getColor($body.color, 'hint'),
  focus  : transparent
}


$color1 = #12152A;
$color2 = #DF125C;

$tablet = 767px;
$desc = 1023px;
